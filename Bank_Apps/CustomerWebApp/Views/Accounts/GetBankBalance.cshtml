@model CustomerWebApp.Models.Account

<div>
    <h2>  Welcome to ABC Internet Banking </h2>
    <h4>Hi @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ifsc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ifsc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MobileNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobileNumber)
        </dd>
    </dl>
</div>
<div>
    <h4>Bank Balance: Rs @TempData["BankBalance"] </h4>
    <br />
    <a asp-action="AccountPage">Back to Accounts Page</a> <br />
    <a asp-action="LogOut" asp-controller="LoginCustomers">LogOut</a> <br />
</div>
